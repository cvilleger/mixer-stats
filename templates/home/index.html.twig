{% extends 'base.html.twig' %}

{% block title %}Mixer Stats{% endblock %}

{% block body %}
<div class="container">

    <table class="striped">
        <thead>
        <tr>
            <th></th>
            <th>Viewers</th>
            <th>Followers</th>
            <th>Game</th>
        </tr>
        </thead>
        <tbody>
        {% for item in items %}
            <tr>
                <th>{{ item.token }} {% if item.partnered %}<i class="material-icons">check</i>{% endif %}</th>
                <td>{{ item.viewersCurrent }}</td>
                <td>{{ item.numFollowers }}</td>
                <td>{{ item.type.name }} ( {{ item.type.viewersCurrent }} )</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a class="btn tooltipped" data-position="bottom" data-tooltip="I am a tooltip">Hover me!</a>

</div>
{% endblock %}
